# message
echo "~/.zshrc is loaded"

# call bash profiles
export BASH_PATH=~/.bash_profile
test -r $BASH_PATH && . $BASH_PATH

# basical PATHs
export PATH=$PATH:/bin:/usr/bin:/usr/local/bin

# zsh color settings?
export TERM="xterm-256color"

# add this directory to environmental variable
export ZSH_HOME=~/Dropbox/Devel/zshrc
export PATH=$PATH:$ZSH_HOME

# read zshell settings
export ZSH=~/.oh-my-zsh

# git plugins of zshell
plugins=(git)

# suppress sudden logout
set -o ignoreeof

# zsh theme
ZSH_THEME="powerlevel9k/powerlevel9k"
POWERLEVEL9K_COLOR_SCHEME='light'

# launch oh-my-zsh
source $ZSH/oh-my-zsh.sh

# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# pyenv
export PYENV_ROOT=$HOME/.pyenv
export PATH=$PATH:$PYENV_ROOT/bin
eval "$(pyenv init -)"

# added by Anaconda2 4.2.0 installer
export PATH="~/anaconda/bin:$PATH"
eval "$(pyenv init -)"

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# language settings
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# java settings
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_121.jdk/Contents/Home
export TOMCAT_HOME=/Applications/apache-tomcat-8.0.41
export CATALINA_HOME=/Applications/apache-tomcat-8.0.41
export PATH=$PATH:$CATALINA_HOME/bin:$JAVA_HOME/bin:$JAVA_HOME/jre/bin:/usr/local/mysql/bin:/bin:/usr/bin:/usr/local/bin:${PATH}

# logstash settings
export LOGSTASH_HOME=/usr/local/bin/logstash
export PATH=$PATH:$LOGSTASH_HOME

# elasticsearch settings
# export ELASTIC_SEARCH_HOME=~/Documents/elasticsearch/elasticsearch-5.4.0/
# export PATH=$PATH:~/Documents/elasticsearch/elasticsearch-5.4.0/bin

# solr settings
export SOLR_HOME=/usr/share/solr-6.6.0
export PATH=$PATH:$SOLR_HOME/bin


# hadoop settings
export HADOOP_HOME=/usr/local/Cellar/hadoop/2.8.0/libexec
export HADOOP_MAPRED_HOME=$HADOOP_HOME
export HADOOP_COMMON_HOME=$HADOOP_HOME
export HADOOP_HDFS_HOME=$HADOOP_HOME
export YARN_HOME=$HADOOP_HOME
export HADOOP_COMMON_LIB_NATIVE_DIR=$HADOOP_HOME/lib/native
export PATH=$PATH:$HADOOP_HOME/sbin:$HADOOP_HOME/bin
export HADOOP_INSTALL=$HADOOP_HOME

# hive settings
export HIVE_HOME=/usr/local/Cellar/hive/2.1.1/libexec
export PATH=$PATH:$HIVE_HOME/bin

# derby settings
export DERBY_HOME=/usr/local/Cellar/derby/10.13.1.1/libexec
export PATH=$PATH:$DERBY_HOME/bin
export CLASSPATH=$CLASSPATH:$DERBY_HOME/libexec/lib/derby.jar:$DERBY_HOME/libexec/lib/derbytools.jar

# rvm settings
alias ls='gls --color=auto'
eval "$(rbenv init -)"
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# mysql settings
export MYSQL=/usr/local/bin/mysql
export PATH=$PATH:$MYSQL
